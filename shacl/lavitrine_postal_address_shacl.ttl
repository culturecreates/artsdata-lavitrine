@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ads: <http://kg.artsdata.ca/shacl/> .

################
# PostalAddress Shape 
################

ads:addressProp
    sh:path schema:address ;
    sh:node ads:PostalAddressNode ;
.

ads:PostalAddressNode
    sh:targetClass schema:PostalAddress ;
    sh:closed true ;
    sh:ignoredProperties (rdf:type) ;
    sh:property ads:streetAddressProp, 
                ads:addressCountryProp, 
                ads:addressRegionProp, 
                ads:postalCodeProp, 
                ads:addressLocalityProp ;
.
    
ads:streetAddressProp
    sh:path schema:streetAddress ;
    sh:minCount 1 ;
    sh:uniqueLang true ;
    sh:or ( 
        [sh:datatype rdf:langString ;] 
        [sh:datatype xsd:string ;]
    ) .

ads:addressCountryProp
    sh:path schema:addressCountry ;
    sh:minCount 1 ;
    sh:uniqueLang true ;
    sh:or ( 
        [sh:datatype rdf:langString ;] 
        [sh:datatype xsd:string ;]
    ) .

 ads:addressRegionProp
    sh:path schema:addressRegion ;
    sh:minCount 1 ;
    sh:uniqueLang true ;
    sh:or ( 
        [sh:datatype rdf:langString ;] 
        [sh:datatype xsd:string ;]
    ) .

ads:postalCodeProp
    sh:path schema:postalCode ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:datatype xsd:string .

ads:addressLocalityProp
    sh:path schema:addressLocality ;
    sh:minCount 1 ;
    sh:uniqueLang true ;
    sh:or ( 
        [sh:datatype rdf:langString ;] 
        [sh:datatype xsd:string ;]
    ) .
    