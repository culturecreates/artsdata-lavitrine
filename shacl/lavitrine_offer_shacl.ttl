@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ads: <http://kg.artsdata.ca/shacl/> .

################
# Lavitrine Offers
################

ads:AggregateOfferNode
    sh:targetClass schema:AggregateOffer ;
    sh:closed true ;
    sh:ignoredProperties (rdf:type) ;
    sh:property ads:additionalTypeProp ,
                ads:lowPriceProp ,
                ads:highPriceProp ,
                ads:nestedOffersProp ,
                ads:availabilityProp ,
                ads:priceProp ,
                ads:priceCurrencyProp ,
                ads:offerUrlProp ,
                ads:offerNameProp ,
                ads:validFromProp ,
                ads:validThroughProp ;
                
    .
    
ads:OfferNode
    sh:targetClass schema:Offer ;
    sh:closed true ;
    sh:ignoredProperties (rdf:type) ;
    sh:property ads:additionalTypeProp ,
                ads:availabilityProp ,
                ads:priceProp ,
                ads:priceCurrencyProp ,
                ads:offerUrlProp ,
                ads:offerNameProp ,
                ads:validFromProp ,
                ads:validThroughProp ;
    .

ads:nestedOffersProp
    sh:path schema:offers ;
    sh:minCount 0 ;
    sh:node ads:OfferNode ;
.

ads:additionalTypeProp
    sh:path schema:additionalType ;
    sh:in  (  adr:OfferRequiresRegistration );
    sh:description "An Offer that requires registration **MUST** have schema:additionalType set to 'http://kg.artsdata.ca/resource/OfferRequiresRegistration'"
    .

ads:lowPriceProp
    sh:path schema:lowPrice ;
    sh:minCount 1 ;
    .

ads:highPriceProp
    sh:path schema:highPrice ;
    sh:minCount 1 ;
    .

ads:availabilityProp
    sh:path schema:availability ;
     sh:in  (   schema:InStock
                schema:SoldOut
                schema:PreSale
                schema:LimitedAvailability
                schema:Discontinued            );
    .

ads:priceProp
    sh:path schema:price ;
    sh:description "A free event MUST have price: 0 in the Offer directly connected to the event (not the nested offers). When there are multiple offers with different prices, the AggregateOffer price **MUST** be null (but not 0), and the lowPrice and highPrice **MUST** be filled in."
    .

ads:priceCurrencyProp
    sh:path schema:priceCurrency ;
    .

ads:offerUrlProp
    sh:path schema:url ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    .

ads:offerNameProp
    sh:path schema:name ;
    .

ads:validFromProp
    sh:path schema:validFrom ;
    sh:minCount 0 ;
     sh:or (
        [ sh:datatype xsd:dateTime ; ]
        [ sh:datatype xsd:date ; ]
    ) ;
    .

ads:validThroughProp
    sh:path schema:validThrough ;
     sh:or (
        [ sh:datatype xsd:dateTime ; ]
        [ sh:datatype xsd:date ; ]
    ) ;
    .
