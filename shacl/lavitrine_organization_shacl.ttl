@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ads: <http://kg.artsdata.ca/shacl/> .


####################################################
# Lavitrine Organization SHACL v1
####################################################

ads:OrganizationNode
    sh:targetClass schema:Organization ;
    sh:property ads:organizationNameProp ,
                ads:organizationUrlProp ,
                ads:organizationSameAsProp ,
                ads:organizationAddressProp  ;
.


ads:organizationNameProp
    sh:path schema:name ;
    sh:uniqueLang true ;
    sh:minCount 1 ;
    sh:or ( 
        [sh:datatype rdf:langString ;] 
        [sh:datatype xsd:string ;]
    ) .

ads:organizationUrlProp
    sh:path schema:url ;
    sh:nodeKind sh:IRI ;
    sh:minCount 0 ;
    sh:pattern "^http" ;
    sh:not (
        [sh:pattern "http://schema.org" ;]
    ) .


ads:organizationSameAsProp
    sh:path schema:sameAs ;
    sh:minCount 0 ;
    sh:pattern "^http" ;
    sh:description "sameAs properties must be URIs and start with http and not contain spaces or @" ;
    sh:nodeKind sh:IRI .

ads:organizationAddressProp
    sh:path schema:address ;
    sh:minCount 0 ;
.


